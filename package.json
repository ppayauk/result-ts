{
  "name": "@ppaya/result-ts",
  "version": "0.0.0",
  "private": false,
  "description": "Rust's Result implemented in Typescript using fp-ts",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ppayauk/result-ts"
  },
  "scripts": {
    "commit": "cz",
    "lint": "eslint -v && eslint src/",
    "lint.fix": "eslint --fix src/",
    "format": "prettier --check src",
    "format.fix": "prettier --write src",
    "build": "tsc -p tsconfig.json",
    "ts": "tsc -v  && tsc --noEmit -p tsconfig.json",
    "test": "CI=true JEST_JUNIT_OUTPUT_DIR=out JEST_JUNIT_OUTPUT_FILE=./out/test-results.xml jest --testResultsProcessor ./node_modules/jest-junit",
    "test.watch": "jest --watchAll",
    "test.cov": "CI=true jest --coverage --ci --coverageDirectory='<rootDir>/out'",
    "semantic-release": "semantic-release",
    "prepare": "husky install"
  },
  "author": "james@ppaya.co.uk",
  "license": "ISC",
  "peerDependencies": {
    "fp-ts": "2.x"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@tsconfig/node14": "^1.0.1",
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "act": "0.0.6",
    "commitizen": "^4.2.4",
    "commitlint-config-eslint": "github:admwx7/commitlint-config-eslint",
    "conventional-changelog-eslint": "^3.0.9",
    "cz-adapter-eslint": "^0.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-functional": "^3.5.0",
    "fast-check": "^2.17.0",
    "fp-ts": "^2.11.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "prettier": "^2.3.2",
    "semantic-release": "^17.4.4",
    "typescript": "^4.3.5"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleNameMapper": {
      "\\.svg": "<rootDir>/src/__mocks__/svgrMock.js"
    },
    "coverageReporters": [
      "text-summary",
      "text",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/config/*.*",
      "!src/index.tsx",
      "!src/reportWebVitals.ts",
      "!src/wdyr.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "dependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/release-notes-generator": "^9.0.3"
  }
}
